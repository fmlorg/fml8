   <glossentry>
	<glossterm> 	2	</glossterm>
	<glossdef>
	<para>
	the same pronounciation as "to".
	</para>
	<para>
		STR2EUC (== STRing to EUC)
<screen>
use String qw(STR2EUC);
$euc_string = STR2EUC($string);
</screen>
	</para>
	</glossdef>
